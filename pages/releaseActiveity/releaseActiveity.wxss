@import "../../assets/weui.wxss";
@import "../../assets/iconfont.wxss";

.ql-active {
  color: #2D82FF;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: absolute;
  left: 0;
  right: 100%;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
}





.container {
  padding: 0 24rpx;
  box-sizing: border-box;
  background: #fff;
}

.container .title {
  height: 100rpx;
  line-height: 100rpx;
  font-size:50rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color: #2D82FF;
}

.container .cont {
  margin-top: 40rpx;
}

.container .cont .item_box {
  display: flex;
  margin-bottom: 20rpx;
}

.container .cont .item_box .left {
  width: 100rpx;
}

.container .cont .item_box .left>image {
  height: 50rpx;
  width: 45rpx;
  display: block;
  margin: 0 auto;
}

.container .cont .item_boxnum .left>image {
  height: 45rpx;
}

.container .cont .item_box .right {
  flex: 1;
  overflow: hidden;
  display: flex;
}

.container .cont .item_box .right .origin {
  flex: 1;
}

.container .cont .item_box .right .origin .fmImg {
  height: 200rpx;
  width: 200rpx;
  display: block;
  border: 2rpx solid #D1D1D1;
  margin-top: 20rpx;
}

.container .cont .item_box .right .origin:nth-child(2n + 2) {
  padding-left: 40rpx;
  box-sizing: border-box;
}

.container .cont .item_box .right .origin .top_txt {
  height: 40rpx;
  line-height: 40rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(50,57,67,1);
}

.container .cont .item_box .right .origin input {
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 2rpx solid #D1D1D1;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(152,158,167,1);
}

.container .cont .item_box .right .origin textarea {
  height: 240rpx;
  line-height: 50rpx;
  border-bottom: 2rpx solid #D1D1D1;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(152,158,167,1);
  border: 2rpx solid #D1D1D1;
  padding: 20rpx;
  box-sizing: border-box;
}

.container .cont .item_box .right .origin .picker_box {
  height: 100%;
  width: 100%;
}

.container .cont .item_box .right .origin .picker_box .picker {
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 2rpx solid #D1D1D1;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(152,158,167,1);
}

.container .cont .cont_cent {
  position: relative;
  padding-bottom: 20rpx;
  height: 980rpx;
}

.container .cont .cont_cent .cent_title {
  height: 80rpx;
  line-height: 80rpx;
  font-size:40rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(50,57,67,1);
}

.container .cont .cont_cent .input_cent {
  position: absolute;
  left: 0;
  width: 100%;
  height: 900rpx;
  top: 80rpx;
}

.container .cont .cont_cent .input_cent .editor_cent {
  height: 800rpx;
  width: 100%;
  border: 2rpx solid #ECECEC;
  border-top: none;
  margin-top: 100rpx;
}

.container .bot_btn {
  background: #2D82FF;
  color: #fff;
  line-height: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  margin: 60rpx auto;
}
