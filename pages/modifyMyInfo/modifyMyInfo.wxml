<view class="container" wx:if="{{type === 'name'}}">
  <view class="input_box">
    <view>姓名</view>
    <input type="text" value="{{userData.name}}" placeholder="输入你的名字" focus bindblur="inputname"></input>
  </view>
  <view class="sure" bindtap="clickSure" data-type="ff">确定</view>
</view>

