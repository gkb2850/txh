page {
  background: #fff;
}

.container {
  padding: 0 50rpx;
  box-sizing: border-box;
}

.container .item_box {
  display: flex;
  height: 100rpx;
  border-bottom: 2rpx solid #2D82FF;
}

.container .item_box .txt_title {
  width: 130rpx;
  height: 100%;
  line-height: 100rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
}

.container .item_box .right {
  flex: 1;
  height: 100%;
  display: flex;
}

.container .item_box .right .txt {
  flex: 1;
  height: 100%;
  line-height: 100rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
}

.container .item_box .right .txtimg {
  height: 28rpx;
  width: 28rpx;
  display: block;
  margin: 36rpx 0;
}

.container .item_box .right .userImg {
  height: 90rpx;
  width: 90rpx;
  margin: 5rpx 0;
  border-radius: 45rpx;
}

.container .item_box .right .radio_group {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}

.container .item_box .right .radio_group .radioSex {
  margin-right: 20rpx;
  transform:scale(0.8);
}

.container .bot_reg {
  margin: 80rpx 0;
  padding: 0 50rpx;
  box-sizing: border-box;
}

.container .bot_reg view {
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  color: #fff;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  background: #2D82FF;
  border-radius: 43rpx;
}