<view class="container">
  <view class="item_box item_boxf" bindtap="changeMyInfo" data-type="userImg">
    <view class="txt">头像</view>
    <view class="right">
      <image class="userImg" src="{{userData.img}}"></image>
      <image class="arrow" src="../../assets/images/toright_icons.png"></image>
    </view>
  </view>
  <view class="item_box" bindtap="changeMyInfo" data-type="name">
    <view class="txt">姓名</view>
    <view class="right">
      <view>{{userData.name}}</view>
      <image class="arrow" src="../../assets/images/toright_icons.png"></image>
    </view>
  </view>
  <view class="item_box" bindtap="changeMyInfo" data-type="phone">
    <view class="txt">手机号</view>
    <view class="right">
      <view>{{userData.phone}}</view>
      <image class="arrow" src="../../assets/images/toright_icons.png"></image>
    </view>
  </view>
  <view class="item_box">
    <view class="txt">性别</view>
    <view class="right">
      <picker class="picker_box" bindchange="bindPickerChange" data-type="sex" value="{{index}}" range="{{sexList}}">
        <view class="picker">{{userData.sex}}</view>
      </picker>
      <image class="arrow" src="../../assets/images/toright_icons.png"></image>
    </view>
  </view>
  <view class="item_box">
    <view class="txt">工会</view>
    <view class="right">
      <picker class="picker_box" bindchange="bindPickerChange" data-type="hometown" value="{{index}}" range="{{hometownList}}">
        <view class="picker">{{userData.address}}</view>
      </picker>
      <image class="arrow" src="../../assets/images/toright_icons.png"></image>
    </view>
  </view>
  <view class="item_box">
    <view class="txt">年级</view>
    <view class="right">
      <picker class="picker_box" bindchange="bindPickerChange" data-type="gradetxt" value="{{index}}" range="{{gradetxtList}}">
        <view class="picker">{{userData.nianji}}</view>
      </picker>
      <image class="arrow" src="../../assets/images/toright_icons.png"></image>
    </view>
  </view>
  <view class="item_box">
    <view class="txt">院系</view>
    <view class="right">
      <picker class="picker_box" bindchange="bindPickerChange" data-type="collegestxt" value="{{index}}" range="{{collegestxtList}}">
        <view class="picker">{{userData.yuanxi}}</view>
      </picker>
      <image class="arrow" src="../../assets/images/toright_icons.png"></image>
    </view>
  </view>
  <view class="item_box">
    <view class="txt">班级</view>
    <view class="right">
      <picker class="picker_box" bindchange="bindPickerChange" data-type="classtxt" value="{{index}}" range="{{classtxtList}}">
        <view class="picker">{{userData.banji}}</view>
      </picker>
      <image class="arrow" src="../../assets/images/toright_icons.png"></image>
    </view>
  </view>
  <view class="item_box">
    <view class="txt">专业</view>
    <view class="right">
      <picker class="picker_box" bindchange="bindPickerChange" data-type="majortxt" value="{{index}}" range="{{majortxtList}}">
        <view class="picker">{{userData.zhuanye}}</view>
      </picker>
      <image class="arrow" src="../../assets/images/toright_icons.png"></image>
    </view>
  </view>
  <view class="item_box" bindtap="changeMyInfo" data-type="password">
    <view class="txt">密码</view>
    <view class="right">
      <image class="arrow" src="../../assets/images/toright_icons.png"></image>
    </view>
  </view>
</view>