<view class="container">
  <view class="title">
    <image src="../../assets/images/search_icon.png"></image>
    <input placeholder="搜索活动资讯"></input>
  </view>
  <view class="cont_box">
    <view class="ad_box">
      <swiper indicator-dots="{{indicatorDots}}"
        autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" class="swiper_index">
        <!-- <block wx:for="{{background}}" wx:key="*this"> -->
          <swiper-item>
            <image src="../../assets/images/indexs1.jpg"></image>
          </swiper-item>
          <swiper-item>
            <image src="../../assets/images/indexs2.jpg"></image>
          </swiper-item>
        <!-- </block> -->
      </swiper>
    </view>
    <view class="new_box">
      <view class="item_box" wx:for="{{newsList}}" wx:key="index">
        <view class="left">
          <image src="{{item.src}}"></image>
        </view>
        <view class="right">
          <view class="ac_title">
            <view>活动主题</view>
            <view>{{item.titletxt}}</view>
          </view>
          <view class="author">
            <view>作者</view>
            <view>{{item.nametxt}}</view>
          </view>
          <view class="time">
            <view>时间</view>
            <view>{{item.time}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
