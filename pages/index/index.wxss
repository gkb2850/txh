.container {

}

.container .title {
  margin: 8rpx 24rpx 12rpx 24rpx;
  height: 72rpx;
  display: flex;
  background: #F5F8FC;
  border-radius: 8rpx;
}

.container .title>image {
 width: 32rpx;
 height: 32rpx;
 margin: 20rpx 12rpx 20rpx 24rpx; 
}

.container .title>input {
  flex: 1;
  height: 100%;
  line-height: 72rpx;
  font-size: 28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(206,211,218,1);
}

.container .cont_box {
  padding: 0 24rpx;
  box-sizing: border-box;
}

.container .cont_box .ad_box {
  padding-top: 20rpx;
  width: 100%;
  height: 460rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.container .cont_box .ad_box .swiper_index {
  width: 100%;
  height: 100%;
}

.container .cont_box .ad_box image {
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 12rpx;
}

.container .new_box {
  margin-top: 20rpx;
  background: #F8F9FA;
}

.container .new_box .item_box {
  display: flex;
  padding: 10rpx 24rpx 10rpx 0;
  box-sizing: border-box;
  border-radius: 10rpx;
  box-shadow:0px 4px 6px 0px rgba(204,204,204,0.2);
  margin-bottom: 20rpx;
  background: #fff;
}

.container .new_box .item_box .left {
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
}

.container .new_box .item_box .left image {
  height: 100%;
  width: 100%;
  display: block;
  border-radius: 6rpx;
}

.container .new_box .item_box .right {
  flex: 1;
  overflow: hidden;
}

.container .new_box .item_box .right .ac_title {
  display: flex;
  overflow: hidden;
  font-size: 28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(50,57,67,1);
  height: 56rpx;
}

.container .new_box .item_box .right .ac_title>view:first-child {
  width: 140rpx;
  height: 28rpx;
  line-height: 28rpx;
}

.container .new_box .item_box .right .ac_title>view:last-child {
  flex: 1;
  line-height: 28rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.container .new_box .item_box .right .author {
  height: 28rpx;
  margin-top: 15rpx;
  display: flex;
  font-size: 28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(50,57,67,1);
}

.container .new_box .item_box .right .author>view:nth-child(1) {
  width: 140rpx;
  height: 100%;
  line-height: 28rpx;
}

.container .new_box .item_box .right .author>view:nth-child(2) {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 28rpx;
  line-height: 28rpx;
}

.container .new_box .item_box .right .time {
  height: 28rpx;
  margin-top: 20rpx;
  display: flex;
  font-size: 28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color: #989EA7;
}

.container .new_box .item_box .right .time>view:nth-child(1) {
  width: 140rpx;
  height: 100%;
  line-height: 28rpx;
}

.container .new_box .item_box .right .time>view:nth-child(2) {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 28rpx;
  line-height: 28rpx;
}

