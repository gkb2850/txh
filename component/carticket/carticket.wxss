.container {
  margin-top: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx 20rpx;
  box-sizing: border-box;
  margin: 20rpx 24rpx 0 24rpx;
  box-shadow:0px 8px 12px 0px rgba(204,204,204,0.2);
}

.container .title {
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(50,57,67,1);
}

.container .title .time {
  height: 100%;
  line-height: 60rpx;
}

.container .title .status {
  height: 100%;
  line-height: 60rpx;
}

.container .title .status.statusblue {
  color: #2D82FF;
}

.container .cont {
  margin-top: 10rpx;
  display: flex;
}

.container .cont .right {
  flex: 1;
  overflow: hidden;
  display: inline-flex;
}

.container .cont .right .icon_box image {
  height: 30rpx;
  width: 30rpx;
  display: block;
  margin: 0;
}

.container .cont .right .icon_box view {
  height: 50rpx;
  width: 2rpx;
  background: #ccc;
  margin-left: 14rpx;
}

.container .cont .right .txt_site {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 10rpx;
}

.container .cont .right .txt_site>view {
  height: 30rpx;
  line-height: 30rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(50,57,67,1);
}

.container .cont .left {
  flex: 1;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(50,57,67,1);
  text-align: right;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
}

.container .cont .left>view:nth-child(2) {
  width: 90rpx;
  height: 40rpx;
  background: #2D82FF;
  color: #fff;
  border-radius: 6rpx;
  line-height: 40rpx;
  text-align: center;
}

