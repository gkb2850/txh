.container {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
  box-shadow:2px 0px 4px 0px #ccc;
  margin-bottom: 24rpx;
  border-left: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
}

.container .title {
  height: 40rpx;
  display: flex;
  font-size:24rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(30,30,30,1);
}

.container .title .left {
  height: 100%;
  line-height: 40rpx;
  width: 100rpx;
}

.container .title .right {
  flex: 1;
  overflow: hidden;
  display: flex;
}

.container .title .right>view:first-child {
  height: 100%;
  line-height: 40rpx;
  margin-right: 20rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container .title .right>view:last-child {
  height: 100%;
  line-height: 40rpx;
  font-size: 24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(152,158,167,1);
  width: 140rpx;
  text-align: right;
}

.container .cont {
  margin: 10rpx 0;
  padding-left: 100rpx;
  font-size: 24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(152,158,167,1);
}

.container .cont .txtcar {
  line-height: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.container .cont .price {
  height: 30rpx;
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 10rpx;
}

.container .bot {
  display: flex;
  height: 80rpx;
  justify-content: space-between;
}

.container .bot .left {
  display: inline-flex;
  font-size: 24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(152,158,167,1);
  height: 100%;
}

.container .bot .left .num {
  height: 24rpx;
  line-height: 24rpx;
  margin-top: 24rpx;
}

.container .bot .left .money {
  margin-left: 10rpx;
  font-size: 40rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:500;
  color:rgba(250,100,0,1);
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 16rpx;
}

.container .bot .right {
  display: flex;
  height: 100%;
  align-items: center;
  flex: 1;
  overflow: hidden;
  justify-content: flex-end;
  padding-left: 20rpx;
}

.container .bot .right>view {
  color: #fff;
  background: #2D82FF;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  border-radius: 8rpx;
  width: 100rpx;
}

.container .bot .right .makeTxt {
  flex: 1;
  width: auto;
  height: 40rpx;
  line-height: 40rpx;
  color: rgba(152,158,167,1);
  background: transparent;
  text-align: right;
}